// app/services/booking.tsx
import React, { useState } from "react";
import {
  View,
  Text,
  StyleSheet,
  TouchableOpacity,
  TextInput,
  ScrollView,
  Alert,
  KeyboardAvoidingView,
  Platform,
} from "react-native";
import { SafeAreaView } from "react-native-safe-area-context";
import { useRouter } from "expo-router";
import { LinearGradient } from "expo-linear-gradient";
import { Ionicons } from "@expo/vector-icons";

export default function BookingScreen() {
  const router = useRouter();

  const [form, setForm] = useState({
    name: "",
    phone: "",
    address: "",
    date: "",
    notes: "",
  });

  const handleBooking = () => {
    if (!form.name || !form.phone || !form.address) {
      Alert.alert("‚ö†Ô∏è Missing Details", "Please fill all required fields.");
      return;
    }
    Alert.alert("‚úÖ Booking Confirmed", "Your booking has been submitted!");
    router.push("/"); // later you can change this to a success page
  };

  return (
    <SafeAreaView style={styles.container}>
      {/* Gradient Header */}
      <LinearGradient
        {...({
          colors: ["#6366F1", "#8B5CF6"],
          start: { x: 0, y: 0 },
          end: { x: 1, y: 1 },
          style: styles.headerGradient,
        } as any)}
      >
        <TouchableOpacity onPress={() => router.back()}>
          <Ionicons name="arrow-back" size={24} color="#fff" />
        </TouchableOpacity>
        <Text style={styles.headerTitle}>Book Your Service üßæ</Text>
        <Text style={styles.headerSubtitle}>
          Please fill in your details below to confirm your booking ‚ú®
        </Text>
      </LinearGradient>

      {/* Form Section */}
      <KeyboardAvoidingView
        behavior={Platform.OS === "ios" ? "padding" : undefined}
        style={{ flex: 1 }}
      >
        <ScrollView contentContainerStyle={styles.form}>
          {/* Name */}
          <View style={styles.inputGroup}>
            <Ionicons name="person-outline" size={20} color="#6366F1" />
            <TextInput
              placeholder="Full Name"
              style={styles.input}
              value={form.name}
              onChangeText={(text) => setForm({ ...form, name: text })}
            />
          </View>

          {/* Phone */}
          <View style={styles.inputGroup}>
            <Ionicons name="call-outline" size={20} color="#6366F1" />
            <TextInput
              placeholder="Phone Number"
              keyboardType="phone-pad"
              style={styles.input}
              value={form.phone}
              onChangeText={(text) => setForm({ ...form, phone: text })}
            />
          </View>

          {/* Address */}
          <View style={styles.inputGroup}>
            <Ionicons name="location-outline" size={20} color="#6366F1" />
            <TextInput
              placeholder="Service Address"
              style={styles.input}
              value={form.address}
              onChangeText={(text) => setForm({ ...form, address: text })}
            />
          </View>

          {/* Date */}
          <View style={styles.inputGroup}>
            <Ionicons name="calendar-outline" size={20} color="#6366F1" />
            <TextInput
              placeholder="Preferred Date (e.g., 15 Jan 2026)"
              style={styles.input}
              value={form.date}
              onChangeText={(text) => setForm({ ...form, date: text })}
            />
          </View>

          {/* Notes */}
          <View style={[styles.inputGroup, { alignItems: "flex-start" }]}>
            <Ionicons
              name="document-text-outline"
              size={20}
              color="#6366F1"
              style={{ marginTop: 8 }}
            />
            <TextInput
              placeholder="Additional Notes (optional)"
              style={[styles.input, { height: 80, textAlignVertical: "top" }]}
              multiline
              numberOfLines={4}
              value={form.notes}
              onChangeText={(text) => setForm({ ...form, notes: text })}
            />
          </View>

          {/* Confirm Button */}
          <TouchableOpacity style={styles.bookButton} onPress={handleBooking}>
            <LinearGradient
              {...({
                colors: ["#6366F1", "#8B5CF6"],
                start: { x: 0, y: 0 },
                end: { x: 1, y: 1 },
                style: styles.bookGradient,
              } as any)}
            >
              <Ionicons name="checkmark-circle-outline" size={22} color="#fff" />
              <Text style={styles.bookText}>Confirm Booking</Text>
            </LinearGradient>
          </TouchableOpacity>
        </ScrollView>
      </KeyboardAvoidingView>
    </SafeAreaView>
  );
}

// Styles
const styles = StyleSheet.create({
  container: { flex: 1, backgroundColor: "#F9FAFB" },
  headerGradient: {
    paddingVertical: 35,
    paddingHorizontal: 16,
    borderBottomLeftRadius: 30,
    borderBottomRightRadius: 30,
    marginBottom: 16,
  },
  headerTitle: {
    fontSize: 22,
    fontWeight: "800",
    color: "#fff",
    marginTop: 8,
  },
  headerSubtitle: {
    fontSize: 13,
    color: "#E0E7FF",
    marginTop: 4,
    lineHeight: 18,
  },
  form: { padding: 16 },
  inputGroup: {
    flexDirection: "row",
    alignItems: "center",
    backgroundColor: "#fff",
    borderRadius: 12,
    paddingHorizontal: 12,
    paddingVertical: 10,
    marginBottom: 14,
    shadowColor: "#000",
    shadowOpacity: 0.05,
    shadowRadius: 4,
    elevation: 2,
  },
  input: {
    flex: 1,
    fontSize: 15,
    color: "#111827",
    marginLeft: 10,
  },
  bookButton: { marginTop: 20, borderRadius: 12, overflow: "hidden" },
  bookGradient: {
    flexDirection: "row",
    alignItems: "center",
    justifyContent: "center",
    paddingVertical: 14,
  },
  bookText: {
    color: "#fff",
    fontSize: 16,
    fontWeight: "700",
    marginLeft: 8,
  },
});
